<div class="col-md-4">
  <div class="card mb-4 shadow-sm" data-id="<%= portfolio_item.id %>">
    <%= image_tag portfolio_img(portfolio_item.thumb_image, 'thumb'), width: '100%' %>

    <div class="card-body">
      <p class="card-text">
      	<span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span>
				<%= portfolio_item.subtitle %>
      </p>
      <% if logged_in?(:site_admin) %>
	      <div class="d-flex justify-content-between align-items-center">
	        <div class="btn-group">
	        	<%= link_to "Edit Portfolio Item", edit_portfolio_path(portfolio_item.id), class: "btn btn-sm btn-outline-secondary" %>
	        </div>
	      </div>
      <% end %>
    </div>
  </div>
</div>


<% if logged_in?(:site_admin) %>
	<span class="pull-right blogcrumb">
		<%= link_to fa_icon('upload'), 
							toggle_status_blog_path(blog.id), 
							title: 'Current status: ' + blog.status.camelize,
							style: blog_status_color(blog) %>
		<%= link_to fa_icon('pencil-square-o'), edit_blog_path(blog), title: 'Edit' %>
		<%= link_to fa_icon('trash'), blog, method: :delete, data: { confirm: 'Are you sure?' }, title: 'Delete' %>
	</span>
<% end %>